{
	"root": true,

	"extends": "../.eslintrc-browser.json",

	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},

	"overrides": [
		{
			"files": "wrapper.js",
			"parserOptions": {
				"ecmaVersion": 5,
				"sourceType": "script"
			},
			"rules": {
				"no-unused-vars": "off"
			},
			"globals": {
				"jQuery": false
			}
		},

		{
			"files": "global.js",
			"globals": {
				"noGlobal": false
			}
		},

		{
			"files": "core.js",
			"globals": {

				// Defining Symbol globally would create a danger of using
				// it unguarded in another place, it seems safer to define
				// it only for this module.
				"Symbol": false
			}
		}
	]
}
