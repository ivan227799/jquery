		<script type="text/javascript">
			// <![CDATA[
			function fnShowUserHover()
			{
				$(this).text("Hover!");
			}
			
			function fnAddUserElement()
			{
				$("body").append('<div class="user"></div>');
			}
			// ]]>
		</script>
	</head>
	<body>
		<div class="user"></div>
		
		<script type="text/javascript">
			// <![CDATA[
			$("body").on("mouseenter", ".user", fnShowUserHover);
			// ]]>
		</script>
		
		<input type="button" value="Add element" onclick="fnAddUserElement();" />
